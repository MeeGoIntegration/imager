Ruote.process_definition 'create_image_ondemand' do
  set 'debug_dump' => 'true'

  sequence do
      do_build_image
      do_failed :if => '${__result__} == false'
  end

  define 'do_build_image' do
    cursor :break_if => '${__result__} == false' do
      build_ks
      build_image
    end
  end

  define 'do_failed' do
    sequence do
      update_image_status :status => 'ERROR'
      cancel_process
    end
  end
end
